<?xml version="1.0" encoding="UTF-8"?>

<suite name="Edureka Data-Driven Test Suite" parallel="false" verbose="1">
    
    <parameter name="browser" value="chrome"/>
    
    <!-- ExtentReports Listener -->
    <listeners>
        <listener class-name="com.edureka.utils.ExtentTestNGListener"/>
    </listeners>
    
    <!-- Test 1: Webinar Data-Driven Tests -->
    <test name="Webinar Data-Driven Tests" preserve-order="true">
        <classes>
            <class name="com.edureka.test.WebinarDataDrivenTest">
                <methods>
                    <include name="testWebinarSearchAndRegistration"/>
                    <include name="testWebinarSearchValidation"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- Test 2: Career/Job Application Data-Driven Tests -->
    <test name="Career Data-Driven Tests" preserve-order="true">
        <classes>
            <class name="com.edureka.test.CareerDataDrivenTest">
                <methods>
                    <include name="testJobApplication"/>
                    <include name="testFormFieldValidation"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- Test 3: Search Functionality Data-Driven Tests -->
    <test name="Search Data-Driven Tests" preserve-order="true">
        <classes>
            <class name="com.edureka.test.SearchDataDrivenTest">
                <methods>
                    <include name="testSearchFunctionality"/>
                    <include name="testMultipleSearches"/>
                    <include name="testSearchInputValidation"/>
                </methods>
            </class>
        </classes>
    </test>
    
</suite>